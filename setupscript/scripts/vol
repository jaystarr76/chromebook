#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

vol="$(amixer get 'PGA1.0 1 Master' | tail -n1 | sed -r 's/.*\[(.*)%\].*/\1/')"

# If muted, print ðŸ”‡ and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo ðŸ”‡ && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 60)) ) icon="ðŸ”Š" ;;
	$((vol >= 1)) ) icon="ï€§ " ;;
	$((vol = 0)) ) icon="ï€¦" ;;
	* ) echo ïš© && exit ;;
esac

echo "$icon$vol%"
